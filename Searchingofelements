#include <stdio.h>
#include<conio.h>
#define MAXX_SIZE 100
int main()  
{ 
int arr[MAXX_SIZE];  
int size,i,tosearch,found;
printf("enter size of array:");
scanf("%d",&size);
printf("enter element in array:");
for(i=0 ;i<size; i++);
{
scanf("%d",&arr[i]);
}
printf("/n enter element to search:");
scanf("%d",&tosearch);
found=0; 
for(i=0;i<size;i++)
{
if (arr[i]==tosearch)
{
found==1;
break;
}
}
if(found==1)
{
printf("/n%d is found at position %d",tosearch,i+1);
}
else
{
printf("/n is not found in the array");
}
return (0);
}



    

